{
  "version": "0.3.2",
  "license": "MIT",
  "name": "@charliewilco/toolkit",
  "author": "Charlie ⚡️",
  "module": "dist/index.js",
  "repository": "charliewilco/toolkit",
  "main": "dist/index.cjs",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "bundle": "tsc",
    "types": "tsc --noEmit --pretty",
    "test": "jest",
    "prepare": "yarn build && husky install",
    "prebuild": "rm -rf dist",
    "release": "release",
    "format": "pretty-quick --staged"
  },
  "devDependencies": {
    "@types/jest": "^29.2.6",
    "husky": "^8.0.1",
    "jest": "^29.3.1",
    "prettier": "^2.8.3",
    "pretty-quick": "^3.1.3",
    "release": "^6.3.1",
    "ts-jest": "^29.0.5",
    "tslib": "^2.4.0",
    "tsup": "^6.5.0",
    "typescript": "^4.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "useTabs": true,
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
