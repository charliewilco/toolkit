{
  "version": "0.3.2",
  "license": "MIT",
  "main": "dist/toolkit.js",
  "typings": "dist/toolkit.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "rollup -c",
    "test": "jest",
    "prepare": "yarn build",
    "prebuild": "rm -rf dist",
    "release": "release",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@charliewilco/toolkit",
  "author": "Charlie ⚡️",
  "module": "dist/toolkit.esm.js",
  "repository": "git://github.com/charliewilco/toolkit.git",
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.1",
    "husky": "^4.3.8",
    "release": "^6.3.0",
    "tslib": "^2.1.0",
    "esbuild": "^0.12.15",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "rollup": "^2.53.2",
    "rollup-plugin-dts": "^3.0.2",
    "rollup-plugin-esbuild": "^4.5.0",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5",
    "pretty-quick": "^3.1.0",
    "size-limit": "^4.9.1"
  },
  "size-limit": [
    {
      "path": "dist/toolkit.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/toolkit.esm.js",
      "limit": "10 KB"
    }
  ]
}
