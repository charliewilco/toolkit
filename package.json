{
  "version": "0.4.0",
  "license": "MIT",
  "name": "@charliewilco/toolkit",
  "author": "Charlie ⚡️",
  "module": "dist/index.mjs",
  "repository": "charliewilco/toolkit",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "sideEffect": false,
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts",
    "dev": "tsup src/index.ts --watch",
    "bundle": "tsc",
    "types": "tsc --noEmit --pretty",
    "test": "jest",
    "prebuild": "rm -rf dist",
    "prerelease": "npm run build",
    "release": "release",
    "format": "pretty-quick --staged"
  },
  "devDependencies": {
    "@types/jest": "^29.2.6",
    "husky": "^8.0.1",
    "jest": "^29.3.1",
    "prettier": "^2.8.3",
    "pretty-quick": "^3.1.3",
    "release": "^6.3.1",
    "ts-jest": "^29.0.5",
    "tslib": "^2.4.0",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "useTabs": true,
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "tsup": {
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "splitting": true,
    "format": [
      "esm",
      "cjs"
    ]
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "verbose": true
  }
}
