{
	"version": "0.4.2",
	"license": "MIT",
	"name": "@charliewilco/toolkit",
	"author": "Charlie ⚡️ <charliewilc0@pm.me>",
	"module": "dist/index.mjs",
	"repository": "charliewilco/toolkit",
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"sideEffect": false,
	"files": [
		"dist/**/*"
	],
	"scripts": {
		"build": "tsup src/*.ts",
		"dev": "tsup src/*.ts --watch",
		"test": "jest",
		"prebuild": "rm -rf dist",
		"format": "pretty-quick --staged"
	},
	"devDependencies": {
		"@types/jest": "^29.4.0",
		"husky": "^8.0.1",
		"jest": "^29.4.1",
		"prettier": "^2.8.3",
		"pretty-quick": "^3.1.3",
		"ts-jest": "^29.0.5",
		"tslib": "^2.5.0",
		"tsup": "^6.5.0",
		"typescript": "^4.9.5"
	},
	"prettier": {
		"useTabs": true
	},
	"tsup": {
		"sourcemap": true,
		"clean": true,
		"dts": true,
		"splitting": true,
		"format": [
			"esm",
			"cjs"
		]
	},
	"jest": {
		"preset": "ts-jest/presets/default-esm",
		"testEnvironment": "node",
		"verbose": true
	}
}
